/*Header*/
.header {
	width: 100%;
	background-color: main-color;
}

.menu {
	display: flex;
	align-items: center;
	
}

.menu-itens {
	display: inline-block;
	padding: 0;
	margin-top: 0;
	margin-bottom: 0;
	padding-left: 0;
}

.menu-item {
	list-style: none;
	display: inline-block;
}

.menu-link {
	display: inline-block;
	padding: 10px;
	color: #fff;
	text-decoration: none;
}

.profile {
	width: 200px;
	margin-left: auto;
}

.profile-img {
	vertical-align: middle;
	border-radius: 50%;
	margin: 5px;
}

.profile-text {
	display: inline-block;
	margin: 5px;
	color: #fff;
}

@media screen and (max-width: 400px) {
	
	.menu {
		width: 100%;
		justify-content: center;
		order: 2;
		margin: 10px 0;
	}
	
	.profile {
		width: 100%;
		text-align: center;
		order: 1;
		margin: 10px 0;
	}
}